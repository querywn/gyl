<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<!-- 配置文件改了以后不用重新启动 -->
	<constant name="struts.devMode" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />
	<!--使struts2标签以简单格式显示 -->
	<constant name="struts.ui.theme" value="simple" />
	
	<!-- 基础数据 -->
	<include file="com/neo/gyl/struts/basedata/struts-department.xml"></include>
	<include file="com/neo/gyl/struts/basedata/struts-user.xml"></include>
	
	<!-- 权限管理 -->
	<include file="com/neo/gyl/struts/privilege/struts-role.xml"></include>
	<include file="com/neo/gyl/struts/privilege/struts-privilege.xml"></include>
	
	<!-- 跳转 -->
	<include file="com/neo/gyl/struts/basedata/struts-forward.xml"></include>
	
	<!-- 登录 -->
	<include file="com/neo/gyl/struts/basedata/struts-login.xml"></include>
</struts>	
